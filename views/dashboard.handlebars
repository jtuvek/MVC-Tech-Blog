<!-- views/dashboard.handlebars -->
{{#if user}}
  <h2>Welcome, {{user.username}}!</h2>
  <div class="dashboard">
    {{#each posts}}
      <div class="post">
        <h3>{{title}}</h3>
        <p>{{content}}</p>
        <p>Created on {{createdAt}}</p>
        <!-- Add links for updating or deleting posts -->
      </div>
    {{/each}}
    <a href="/new-post">Add a New Post</a>
  </div>
{{else}}
  <p>Please log in to access the dashboard.</p>
{{/if}}
